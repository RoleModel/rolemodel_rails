<% if @using_cond %>desc 'run javascript tests'
task javascript_tests: :environment do |t|
  success = true
  success &&= system('bin/yarn test_shared')
  success &&= system('bin/yarn test_view_ci')
  abort('JS tests failed') unless success
end
<% else %>desc 'run javascript tests'
task javascript_tests: :environment do |t|
  abort('JS tests failed') unless system('bin/yarn test_ci')
end<% end %>
