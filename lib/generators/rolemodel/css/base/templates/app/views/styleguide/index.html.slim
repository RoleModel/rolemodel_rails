  section.card.section--colors.margin-top-xl
    h2.styleguide-section__title Colors
    h3 Primary
    h4 Scale
    p Usage --color-primary-"number". Example --color-primary-300
    .flex.flex-row.flex-wrap.margin-bottom-md
      - ([ 50 ] + 9.times.map.with_index { |n, i| (i + 1) * 100 }).each do |color|
        .swatch style="background: var(--color-primary-#{color})"
          span = color

    h4 Semantic
    .flex.flex-row.margin-bottom-lg
      - ['-lighter', '-light', '', '-dark', '-darker'].each do |color|
        .swatch style="background: var(--color-primary#{color})"
          span = "--color-primary-#{color}"

